extend layouts/_layout-pages.pug

block title
    | Сторінки


block content

    -var n = 1

    -array = [{name: 'Головна', href: 'index.html'}, {name: 'Про комплекс', href: 'about.html'}]

    section
        .container
            .row
                each val in array
                    .col-md-4.col-lg-3
                        a(href= val.href title='' target='_blank' style='margin-bottom:25px').btn
                            = n++
                            | .
                            | &nbsp;
                            = val.name
