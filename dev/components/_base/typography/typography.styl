


::selection
  bg($bk)
  co($wt)

h1, h2, h3, h4, h5, h6, p, ul li, ol li, blockquote, cite
  font-family $m-font, sans-serif
  co($bk)

h1
  font(e(46), 700, 1.22)
  mb(30)

  color: $blue;

h2
  font(e(30), 700, 1.5)
  mb(27)

h3
  font(e(30), 700, normal)
  mb(32)
  color: $wt

h4
  font(e(22), 700, 1.5)
  mb(38)

h5
  font(e(18), 700, 1.5)
  mb(44)

h6
  font(e(14), 700, 1.5)
  mb(50)

p
  font(e(14), 400, 1.71)
  mb(22)

  color: $bltx2;

hr
  border: 0;
  height: 1px;
  bg($bk)
  margin r(15) 0

