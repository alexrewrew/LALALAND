offset = r(-382);

.repair-design {
  .start-design-repair {
    background-color: #B4EBFF;

    &::before {
      content: '';
      position: absolute;
      top: 0;
      background-color: #fff;
      height: r(334);
      width: 100%;
    }

    &::after {
      content: '';
      position: absolute;
      bottom: 0;
      background-color: #fff;
      height: r(410);
      width: 100%;
    }
  }

  .soft-blue-background {
    position: relative;
    background-color: #EBF7FF;

    &::before {
      content: '';
      position: absolute;
      top: 0;
      background-color: #fff;
      height: r(280);
      width: 100%;
    }
  }

  .description {
    &__title {
      font-size: e(34);
      font-weight: bold;
      color: #0066B3;
      line-height: 55px;
      margin-bottom: r(35);
    }

    &__right-image {
      position: relative;
      top: -47px;
    }

    &__body {
      font-size: e(14);
      color: #8F91A3;
      line-height: 24px;
      margin-bottom: r(50);
    }

    &__cta {
      font-size: e(16);
      font-weight: bold;
      max-width: 229px;
      color: #FFFFFF;
      letter-spacing: 0;
      text-align: center;
      background-color: #EB53C0;
      padding: r(15) r(20) r(20);
      border-radius: 30px;
    }
  }

  .aglomeration {
    &--soft-blue {
      background-color: #B4EBFF;
    }

    &--dark-blue {
      background-color: #EBF7FF;
    }

    &--offset {
      padding-top: r(130);
      margin-bottom: offset;
    }

    &--offset-start {
      position: relative;
      top: -161px;
      z-index: -1;
    }
  }

  .advantages {
    &__title {
      font-size: e(34);
      font-weight: bold;
      color: #FFFFFF;
      letter-spacing: 0;
      line-height: 55px;
      margin-top: r(85);
      margin-bottom: r(89);
    }

    &__enum-image {
      position: absolute;
      top: 0;
      left: 0;
      z-index: -1;

      &--aligner {
        top: -30%;
      }

      &--money {
        top: -20%;
      }

      &--lamp {
        top: -30%;
      }
    }

    &__enum-item {
      position: relative;
      font-size: e(14);
      color: #51525A;
      line-height: 24px;
      min-height: 142px;
    }

    &__enum-body {
      margin-left: 68px;
    }

    .prospects__slider-wrapper {
      position: relative;
      margin-top: r(80);
      z-index: 1;
    }
  }

  .what-you-get {
    padding: 0;

    &__item {
      box-shadow: 0 2px 25px 0 #E6E6EF;
      font-size: e(14);
      font-weight: 500;
      color: #064778;
      letter-spacing: 0;
      text-align: center;

      +mmax(992px) {
        margin-top: r(50);
      }
    }

    &__image {
      min-height: 224px;
      width: 100%;

      +mmax(425px) {
        max-height: 247px;
      }
    }

    &__title {
      background: #FFFFFF;
      min-height: 65px;
      max-height: 65px;
      width: 100%;
      padding: r(18) r(30) r(30)

      +tab() {
        padding: r(12) r(15) r(15)
      }
    }

    &__item-wrapper {
      &:not(:first-of-type) {
        margin-top: r(50);

        +mmax(992px) {
          margin-top: 0;
        }
      }
    }
  }

  .repair-types {
    padding-top: r(103);
    padding-bottom: r(100);

    .repair-types__item {
      margin-top: 50px;
    }

    &__wrapper {
      display: flex;
    }

    &__item {
      position: relative;
      font-size: e(20);
      color: #968200;
      letter-spacing: 0;
      max-height: 78px;
      background-color: #FFDD00;
      border-radius: 10px;
      padding: r(25) r(38) r(30);
      overflow: hidden;

      +mmax(992px) {
        &:not() {
          margin-top: 50px;
        }
      }
    }

    .btn-filter_img {
      right: 30px;
      transform: scale(1.3);
      height: 78px;
      top: 0;
    }
  }
}
