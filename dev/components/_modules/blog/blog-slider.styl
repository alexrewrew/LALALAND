.slider-blog
  max-height 418px
  mb(60)
  +port()
    max-height unset
  +mob()
    max-height unset
  +land()
    margin 0 -30px r(60)
  +xs()
    margin 0 -15px r(60)

  .slide
    bg($wt)
    max-height 418px
    box-shadow: 0 0 25px 0 rgba(78, 78, 78, 0.15);
    margin 10px 0
    +port()
      max-height unset
    +mob()
      max-height unset
      max-width 290px
      margin 10px 15px
  &__description
    padding r(24) r(30) 0 0
    +port()
      padding r(24) r(30) r(48)
    +mob()
      padding r(24) r(25) r(48)
      h3
        fs(20)
  &_date
    text-align right
    mb(36)
  &__image
    display flex
    width 100%
    height 100%
    position relative
    overflow hidden
    align-items center
    justify-content: center
    +mob()
      height 162px
    img
      height 100%
    &_photo
      position absolute
      right 0
      top 0
      bg(#ffdd00)
      co(#968200)
      font-size: e(14)
      font-weight: 500;
      letter-spacing: 1.1px;
      width 100px
      height 40px
      display flex
      align-items center
      justify-content center
      pb(2)

  .arrow
    width 45px
    height 45px
    bottom 32px
    +mob()
      bottom auto
      top 70px
      width: 15px;
      height: 26px;
    &.right
      right: 38px;
      +mob()
        left auto
        right 18px
    &.left
      right 110px
      +mob()
        right auto
        left 18px
    svg
      height 42px
      width 100%
      +mob()
        g
          fill $wt
          stroke $wt

