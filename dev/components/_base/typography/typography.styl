


::selection
  bg($bk)
  co($wt)

h1, h2, h3, h4, h5, h6, p, ul li, ol li, blockquote, cite
  font-family $m-font, sans-serif
  co($bk)

h1
  font(e(46), 700, 1.22)
  mb(30)
  color: $blue;
  +mob()
    font-size: e(26)

.h1-small
  font-size: e(34)
  +mob()
    font-size: e(26)

h2
  font(e(34), 700, 1.29)
  margin r(20) 0 r(66)

  color: $ocean2;
  +mob()
    font-size: e(26)
    line-height: 1.23;
    mb(34)
  +land()
    mt(10)
  +xs()
    mt(0)

h3
  font(e(30), 700, normal)
  mb(8)
  color: $wt
  +mob()
    fs(20)

h4
  font(e(22), 700, 1.36)
  mb(21)
  co($bltx1)
  +mob()
    text-align center
    fs(16)
    mb(10)
//
h5
  font(e(20), 500, 1.5)
  mb(32)

  color: $gray-text1;

.h5-blue
  fw(700)
  mb(4)
  co($ocean2)


h6
  font(e(18), 700, 1.5)
  mb(23)
  color: $bltx4
  +mob()
    fs(16)
    mb(9)

p
  font(e(14), 400, 1.71)
  mb(22)

  color: $bltx2;


hr
  border: 0;
  height: 1px;
  bg($bk2)
  //margin r(15) 0

.color-white
  co($wt)

.color-yellow
  co($yellow-text)

.color-blue
  co(#064778)

.text-center
  text-align center

.color-green-dark
  co($green-dark)

.color-bltx3
  co($bltx3)

.color-pink-light
  co(#f6b8e5)

.color-gray-text2
  co($gray-text2)

.text-20
  fs(20)
  line-height 1.3

.text-18
  fs(18)
  line-height: 1.56;
  fw(500)

.text-14
  co($gray-text1)
  fs(14)
  line-height: 1.56;
  fw(500)

