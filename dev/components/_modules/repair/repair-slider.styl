.slider-repair
  .arrow
    height 60px
    width 60px
    bottom 8px
    &.right
      right 31px
      left auto
    &.left
      right 74px
      left auto
    svg
      height 100%
      width 100%
  .slick-dots
    display flex
    bottom 20px
    position absolute
    left 0
    right 0
    justify-content center
    li
      padding 0
      fs(0)
      margin 0 r(5)
      &:before
        display none
      button
        fs(0)
        border-radius 50%
        width 3px
        height 3px
        padding 0
        bg($wt)
      &.slick-active
        button
          transform scale(1.4)
